<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.opennms.features.graphs</groupId>
        <artifactId>org.opennms.features.graphs.providers</artifactId>
        <version>24.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.opennms.features.graphs.providers</groupId>
    <artifactId>org.opennms.features.graphs.providers.graphml</artifactId>
    <name>OpenNMS :: Features :: Graph :: Providers :: GraphML</name>
    <packaging>bundle</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <!-- TODO MVR this package does not find classes from package edu.uci.ics.jung.graph, but should :( -->
                        <Import-Package>*,edu.uci.ics.jung.graph</Import-Package>
                        <!--<DynamicImport-Package>*</DynamicImport-Package>-->
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.core</artifactId>
            <version>${osgiVersion}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.opennms.features.graphs</groupId>
            <artifactId>org.opennms.features.graphs.api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.opennms.features</groupId>
            <artifactId>org.opennms.features.graphml</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- TODO MVR this is still weird -->
        <dependency>
            <groupId>org.opennms.features.graphs</groupId>
            <artifactId>org.opennms.features.graphs.simple</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- TODO MVR this is still weird -->
        <dependency>
            <groupId>org.opennms.features.graphs</groupId>
            <artifactId>org.opennms.features.graphs.updates</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
