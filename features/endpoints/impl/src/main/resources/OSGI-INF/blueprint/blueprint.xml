<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <bean id="endpointDefinitionRepository" class="org.opennms.netmgt.endpoints.impl.EndpointDefinitionRepositoryImpl">
    </bean>
    <service interface="org.opennms.netmgt.endpoints.api.EndpointDefinitionRepository" ref="endpointDefinitionRepository" >
        <service-properties>
            <entry key="registration.export" value="true"/>
        </service-properties>
    </service>

</blueprint>
