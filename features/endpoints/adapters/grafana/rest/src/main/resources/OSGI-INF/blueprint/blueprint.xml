<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <reference id="endpointDefinitionRepository" interface="org.opennms.netmgt.endpoints.api.EndpointDefinitionRepository" availability="mandatory" />
    <reference id="grafanaClientFactory" interface="org.opennms.netmgt.endpoint.adapters.grafana.api.GrafanaClientFactory" availability="mandatory" />

    <bean id="grafanaEndpointRestService" class="org.opennms.netmgt.endpoint.adapters.grafana.rest.internal.GrafanaEndpointRestServiceImpl">
        <argument ref="endpointDefinitionRepository" />
        <argument ref="grafanaClientFactory" />
    </bean>
    <service interface="org.opennms.netmgt.endpoint.adapters.grafana.rest.GrafanaEndpointRestService" ref="grafanaEndpointRestService" >
        <service-properties>
            <entry key="application-path" value="/rest" />
        </service-properties>
    </service>
</blueprint>
